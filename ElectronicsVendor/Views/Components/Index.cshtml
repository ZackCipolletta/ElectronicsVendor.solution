@{
  Layout = "_Layout";
}

@using ElectronicsVendor.Models;

<h2>Components</h2>

@if (@Model.Count == 0)
{
  <h3>No components have been added yet!</h3>
}

<ul>
  @foreach (Component component in Model)
  {
    <a href='@Url.Action("Details", new { id = component.ComponentId })'>
      <li>
        @component.Type
      </li> 
    </a>
  }
</ul>

<div class="button-area">
  <a href='@Url.Action("Create", "Components")'>
    <button class="green">Add new component</button>
  </a>
  <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
</div>


