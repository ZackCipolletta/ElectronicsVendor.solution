@{
  Layout = "_Layout-Admin";
}

@model ElectronicsVendor.Models.ModelLine

<h2>Add a new model of <span class="highlighted">@ViewBag.Component.Type</span></h2>

@using (Html.BeginForm())
{
  <div class="form-row">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <button class="green" type="submit">Save</button>
  </div>
}

<div class="button-area">
  <a href='@Url.Action("Details", "Components", new { id = ViewBag.Component.ComponentId})'>
    <button>Cancel</button>
  </a>
</div>
